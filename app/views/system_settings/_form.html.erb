<div class="well bs-component">
  <%= form_for @system_setting, :url => system_setting_path, :html => {:role => 'form', :class => 'form-horizontal'} do |f| %>
    <div class="form-group">
      <%= f.label :selenium_host, :class => 'col-md-2 control-label' %>
      <%= f.text_field :selenium_host, :class => 'col-md-10 form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit :class => 'btn btn-primary btn-raised pull-right' %>
    </div>
  <% end %>
</div>